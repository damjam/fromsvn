<?xml version="1.0" encoding="UTF-8"?>
<project name="cims" default="zipAndUpload" basedir=".">

	<!--将部署文件压缩在此目录-->
	<property name="projectPath" value="D:\tomcat-6\webapps\cims">
	</property>
	<property name="targetPath" value="D:\tomcat-6\webapps">
	</property>
	<property name="serverpath" value="/usr/local/tomcat-6/webapps/cims">
	</property>
	<property name="userName" value="root">
	</property>
	<property name="password" value="Damjam159357">
	</property>
	<property name="uploadMachine" value="115.28.236.72">
	</property>
	<tstamp>
		<format property="TODAY" pattern="MMdd" locale="en"/>
	</tstamp>
	<target name="clean">
		<delete file="${targetPath}\cims${TODAY}.zip" 
		/>
	</target>

	<target name="zipProject" depends="clean">
		<zip destfile="${targetPath}\cims${TODAY}.zip" 
			basedir="${projectPath}"
			update="true"
			duplicate="add"
			includes="pages/**/*.jsp,*.jsp,js/**/*.js,js/*.js,WEB-INF/classes/**/*.class,
			WEB-INF/classes/com/ylink/cim/**/*.xml,
			WEB-INF/classes/*.xml,
			WEB-INF/classes/log4j.properties,
			WEB-INF/classes/filter.xml,
			WEB-INF/struts-config*.xml,
			WEB-INF/*.xml,
			jasper/*.*
			"
			excludes="WEB-INF/classes/constantConfig.xml"
		/>
	</target>
	<target name="zipAndUpload" depends="zipProject">
		<echo message="zip文件上传服务器开始" />
		<scp todir="${userName}:${password}@${uploadMachine}:${serverpath}" port="22" trust="true" verbose="true">
			<fileset file="${targetPath}\cims${TODAY}.zip" />
		</scp>
		<echo message="zip文件上传服务器结束" />
	</target>
</project>