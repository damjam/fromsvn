<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>

	<data-sources />

	<form-beans>

		<form-bean name="waterRecordActionForm"
			type="com.ylink.cim.manage.view.WaterRecordActionForm" />
		<form-bean name="waterBillActionForm"
			type="com.ylink.cim.manage.view.WaterBillActionForm" />
		<form-bean name="houseInfoActionForm"
			type="com.ylink.cim.manage.view.HouseInfoActionForm" />
		<form-bean name="ownerInfoActionForm"
			type="com.ylink.cim.manage.view.OwnerInfoActionForm" />
		<form-bean name="parkingBillActionForm"
			type="com.ylink.cim.manage.view.ParkingBillActionForm" />
		<form-bean name="commonServiceBillActionForm"
			type="com.ylink.cim.manage.view.CommonServiceBillActionForm" />
		<form-bean name="decorateServiceBillActionForm"
			type="com.ylink.cim.manage.view.DecorateServiceBillActionForm" />
		<form-bean name="depositBillActionForm"
			type="com.ylink.cim.manage.view.DepositBillActionForm" />	
		<form-bean name="accountActionForm"
			type="com.ylink.cim.manage.view.AccountActionForm" />	
		<form-bean name="accountJournalActionForm"
			type="com.ylink.cim.manage.view.AccountJournalActionForm" />						
	</form-beans>
	<action-mappings>
		<action path="/waterRecord" name="waterRecordActionForm"
			type="com.ylink.cim.manage.view.WaterRecordAction" parameter="action"
			scope="request">
			<forward name="toListPage" path="/pages/manage/water/waterRecordList.jsp"></forward>
			<forward name="toAddPage" path="/pages/manage/water/waterRecordAdd.jsp"></forward>
			<forward name="toUpdatePage"
				path="/pages/manage/water/waterRecordAdd.jsp"></forward>
		</action>
		<action path="/waterBill" name="waterBillActionForm"
			type="com.ylink.cim.manage.view.WaterBillAction" parameter="action"
			scope="request">
		</action>
		<action path="/reportAction" name="waterBillActionForm"
			type="com.ylink.cim.manage.view.ReportAction" parameter="action"
			scope="request">
		</action>
		<action path="/houseInfo" name="houseInfoActionForm"
			type="com.ylink.cim.manage.view.HouseInfoAction" parameter="action"
			scope="request">
		</action>
		<action path="/ownerInfo" name="ownerInfoActionForm"
			type="com.ylink.cim.manage.view.OwnerInfoAction" parameter="action"
			scope="request">
		</action>
		<action path="/commonServiceBill" name="commonServiceBillActionForm"
			type="com.ylink.cim.manage.view.CommonServiceBillAction" parameter="action"
			scope="request">
		</action>
		<action path="/parkingBill" name="parkingBillActionForm"
			type="com.ylink.cim.manage.view.ParkingBillAction" parameter="action"
			scope="request">
		</action>
		<action path="/decorateServiceBill" name="decorateServiceBillActionForm"
			type="com.ylink.cim.manage.view.DecorateServiceBillAction" parameter="action"
			scope="request">
		</action>
		<action path="/depositBill" name="depositBillActionForm"
			type="com.ylink.cim.manage.view.DepositBillAction" parameter="action"
			scope="request">
		</action>	
		<action path="/account" name="accountActionForm"
			type="com.ylink.cim.manage.view.AccountAction" parameter="action"
			scope="request">
		</action>
		<action path="/accountJournal" name="accountJournalActionForm"
			type="com.ylink.cim.manage.view.AccountJournalAction" parameter="action"
			scope="request">
		</action>
	</action-mappings>
</struts-config>